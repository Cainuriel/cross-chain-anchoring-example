{
  "name": "blockchain-anchor-api",
  "version": "1.0.0",  "description": "Mini API para demostrar anclaje entre redes blockchain",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "compile": "npx hardhat compile",
    "deploy:bscTestnet": "npx hardhat run scripts/deploy.js --network bscTestnet",
    "deploy:amoy": "npx hardhat run scripts/deploy.js --network amoy",
    "deploy:alastria": "npx hardhat run scripts/deploy.js --network alastria",
    "deploy:local": "npx hardhat run scripts/deploy.js --network hardhat",
    "test": "npx hardhat test"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "hardhat": "^2.17.2",
    "nodemon": "^3.0.1"
  }
}
